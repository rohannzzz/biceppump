generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  phoneNumber String   @unique
  password    String
  age         Int?
  gender      String?
  height      Float?
  weight      Float?
  fitnessGoal String?
  activityLevel String?
  profileCompleted Boolean @default(false)
  pumpScore   Float    @default(0)
  workouts    Workouts[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Workouts {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  duration    Int?
  userId      Int
  user        Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercises   Exercises[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Exercises {
  id          Int      @id @default(autoincrement())
  name        String
  sets        Int
  reps        Int
  weight      Float?
  muscleGroup String?
  workoutId   Int
  workout     Workouts @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
